  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      background: #121212;
      color: #f1f1f1;
    }
    header {
      background: #1f1f1f;
      padding: 1rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    header h1 {
      color: #00ffcc;
      margin: 0;
    }
    .catalogo {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 1rem;
      padding: 1rem;
    }
    .juego {
      background: #1e1e1e;
      border-radius: 8px;
      padding: 1rem;
      text-align: center;
    }
    .juego img {
      width: 100%;
      height: 250px;
      object-fit: cover;
      border-radius: 6px;
    }
    .btn {
      margin-top: 0.5rem;
      padding: 0.5rem 1rem;
      background: #00ffcc;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    .btn:hover {
      background: #00ccaa;
    }
    #detalle, #carrito {
      padding: 1rem;
      display: none;
    }
    #detalle img {
      max-width: 300px;
      border-radius: 6px;
    }
    #carrito ul {
      list-style: none;
      padding: 0;
    }
    #carrito li {
      background: #1e1e1e;
      padding: 0.5rem;
      margin: 0.5rem 0;
      border-radius: 4px;
    }
